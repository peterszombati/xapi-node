{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es6",
		"outDir": "build",
		"declaration": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		".idea",
		"node_modules",
		"**/*.spec.ts",
		"**/*.d.ts"
	]
}
